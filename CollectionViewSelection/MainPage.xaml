<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Test11.ViewModels"
             xmlns:models="clr-namespace:Test11.Models"
             x:Class="Test11.MainPage"
             x:DataType="vm:MainPageViewModel">

   <CollectionView 
                        ItemsSource="{Binding Projects}"
                        MinimumHeightRequest="250"
                        x:Name="ProjectsCollectionView"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedProject}"
                        SelectionChangedCommand="{Binding NavigateToProjectCommand}"
                        SelectionChangedCommandParameter="{Binding SelectedProject}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="7.5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Project">
                    <Border Padding="15"
                           WidthRequest="200">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Name}"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding Description}"
                                   FontSize="13"
                                   TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

</ContentPage>
